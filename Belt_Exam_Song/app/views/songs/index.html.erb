<li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
<h2>All the songs in hour hub!</h2>

<table>
	<thead>
		<tr>
			<th>Artist</th>
			<th>Title</th>
			<th>Add to Playlist</th>
		</tr>
	</thead>
	<tbody>
		<% @songs.each do |song| %>
			<tr>
				<td><%= song.artist%></td>
				<td><a href="/songs/<%= song.id%>"> <%= song.title%></a></td>
				<td><%= song.playlists.count %></td>
				<td><%= form_for(:song,  url: playlists_path) do |f| %>
			  			<%= f.hidden_field(:id, value:"#{song.id}") %>
					    <%= f.submit "Add" %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>

<h2>Add a Song:</h2>

<%= form_for(@song) do |f| %>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<%= f.label :artist %><br>
	<%= f.text_field :artist %><br>

    <%= f.submit "Add Song" %>
<% end %>
<br/>